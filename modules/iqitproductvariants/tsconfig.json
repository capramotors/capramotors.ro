{
    "compilerOptions": {
      "module": "ES2022",
      "target": "ES2022",
      "sourceMap": true,
      "lib": ["es2022", "dom", "dom.iterable"],
      "noImplicitAny": true,
      "strict": true,
      "strictFunctionTypes": false,
      "skipLibCheck": true,
      "moduleResolution": "node",
      "esModuleInterop": true,
      "allowSyntheticDefaultImports": true
    },
    "include": ["_dev/**/*"]
  }